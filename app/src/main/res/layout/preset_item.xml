<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/preset_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/preset_item_tv_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preset_item_tv_name" />

        <TextView
            android:id="@+id/preset_item_tv_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preset_item_tv_folder" />

        <Button
            android:id="@+id/preset_item_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X" />

        <Button
            android:id="@+id/preset_item_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/preset_item_btn_delete" />

    </RelativeLayout>

</android.support.v7.widget.CardView>