<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignedIntegerInput">
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="SizeAndCountInput" parent="SignedIntegerInput">
        <item name="android:maxLength">@integer/max_size_count_input_length</item>
    </style>

    <style name="GenerationStepHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/generation_step_header_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/generation_step_header_margin_lr</item>
        <item name="android:layout_marginTop">@dimen/generation_step_header_margin_tb</item>
        <item name="android:layout_marginBottom">@dimen/generation_step_header_margin_tb</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="CommonDialogPadded">
        <item name="android:paddingLeft">?dialogPreferredPadding</item>
        <item name="android:paddingRight">?dialogPreferredPadding</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>
